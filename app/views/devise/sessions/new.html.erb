
<h2>
  شماره موبایل و رمز عبور خود را وارد کنید:
</h2>

<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "شماره موبایل" %><br />
    <%= f.text_field :phone_number, autofocus: true , class: "form-control text-center" %>
  </div>
    <br>

  <div class="field">
    <%= f.label "رمز عبور"%><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control text-center" %>
  </div>
    <br>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me , class: "fomr-control" %>
      <%= f.label "ذخیره" %>
    </div>
  <% end -%>

  <div class="actions text-center">
    </br>
    <%= f.submit "تایید" , :class => "btn btn btn-info" , :onClick => "return validateMobNo(user_phone_number.value)" %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
