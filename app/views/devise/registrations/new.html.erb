<div class="container">
  <div class="row">
    <div class="col-md-6 col-lg-offset-3 " style="background-color: #f3f3f3;">

      <div class="">
        <h4 class="farsi">
          برای ثبت نام شماره موبایل خود را وارد
          و رمز عبوری انتخاب کنید:

        </h4>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <label>شماره موبایل</label><br />
            <%= f.text_field :phone_number , autofocus: true , :class => "form-control text-center" %>
          </div>

          <div class="field">
            <label>رمز عبور</label>
            <% if @validatable %>
                <em>(<%= @minimum_password_length %> حرف حداقل)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" , :class => "form-control text-center" %>
          </div>

          <div class="field">

            <label>تکرار رمز عبور</label>
            <br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control text-center" %>
          </div>

          <div class="field col-md-12">
            <br>
            <%= f.submit "ثبت نام" , :class => "btn color2"%>
          </div>
      <% end %>
    </div>
  </div>
</div>

<%#= render "devise/shared/links" %>
