<%active_nav_item :catalogue %>
<% @page_title = "جستجو" %>

<%= render 'shared/navbar' %>


<div class="container">
  <div class="row">
    <div class="col-md-9 col-sm-12 col-xs-12">
      <div class="box-heading category-heading">
              <span>
                نمایش کالاهایی که
                <%= params[:key] %>
                &nbsp;
                <%= params[:value] %>
                می باشد
              </span>
      </div>

      <% if @products.empty? %>
          هیچ کالایی مطابق با جستجوی شما یافت نشد
      <% else %>
          <div class="box-content">
            <div class="box-products">

              <!-- Products Row -->
              <div class="row box-product">
                <%= render 'shared/product_list', :products => @products %>
              </div>
              <!-- end: Products Row -->
            </div>
          </div>
        <div class="col-md-12" style="text-align: center">
          <%=paginate @products %>
        </div>
      <% end %>
    </div>
    <div class="col-md-3 col-sm-12 col-xs-12 box-block page-sidebar">

      <!-- end: Filter by -->
      <div class="box-heading"><span>مقایسه</span></div>
      <!-- Compare -->
      <div class="box-content">
        <div class="compare">
          <%= render "shared/compare" %>
        </div>

        <!-- Compare -->
      </div>
      <div class="clearfix f-space30"></div>
      <%= render "shared/categories_side_panel" %>
      <!-- end: Blog Categories -->


      <div class="clearfix f-space20"></div>
      <!-- Get Updates Box -->
      <!-- end: Get Updates Box -->
    </div>

  </div>
</div>

<div class="row clearfix f-space30"></div>
